<Window x:Class="MusicStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tienda de Musica" Height="800" Width="600">
    <StackPanel Width="400">
        <Image Source="portada.jpg" Height="500" Stretch="Fill">
            
        </Image>
        <Line Height="30"></Line>
        <Button FontSize="20" Content="Carrito" Width="90" Height="70" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource ="boton.png" AlignmentX="Left" Stretch="None"></ImageBrush>
            </Button.Background>
        </Button>
        <Line Height="10"></Line>
        <Button FontSize="20" Content="Generos" Width="90" Height="70" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource ="generos.png" AlignmentX="Left" Stretch="None"></ImageBrush>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
